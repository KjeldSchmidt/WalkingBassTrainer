<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Challenge">

    <TextView
            android:text="FrequencyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frequencyView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

    <TextView
            android:text="CommandView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commandView"
            app:layout_constraintTop_toBottomOf="@id/frequencyView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/successIndicator"
            app:layout_constraintTop_toBottomOf="@id/commandView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

</android.support.constraint.ConstraintLayout>